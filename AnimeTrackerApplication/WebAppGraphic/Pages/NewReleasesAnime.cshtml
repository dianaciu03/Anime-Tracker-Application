@page
@using Logic.Animes
@model WebAppGraphic.Pages.NewReleasesAnimeModel
@{
    ViewData["Title"] = "New releases anime";
    int? id = HttpContext.Session.GetInt32("userId");
    if (id != null)
    {
        Layout = "_LayoutLogout";
    }
    else
    {
        Layout = "_Layout";
    }
}
<div class="background-img-anime">
</div>
<h1 class="second-title text-white">New released anime</h1>
<h4 class="second-subtitle text-white">Here you can find the newest anime available.</h4>
<div class="container" style="margin-left: 7rem; margin-right: 7rem; margin-top:1rem; padding-left:0">
    <form method="post">
        <div class="form-group mb-3">
            <div class="d-flex">
                <input asp-for="AnimeName" type="text" class="form-control rounded-pill mr-2" placeholder="Enter a name..." style="width: 50%;" />
                <button type="submit" style="padding: 2px 20px 3px 20px; font-size: 20px; margin-left: 1rem;" class="btn btn-primary rounded-pill mt-0">Search</button>
            </div>
        </div>
    </form>
</div>
<div class="container-fluid container-display bg-dark">
    
    @foreach (Anime anime in Model.AlLAnime)
    {
        <a asp-page="ContentDetails" asp-route-id="@anime.Id">
            <div class="d-flex flex-column align-items-center">
                <img src="@anime.ImageURL" style="width: 190px; height: 260px;" />
                <p style=" padding-top: 8px">@anime.Name</p>
                <p>@anime.SeasonAnime @anime.ReleaseYear</p>
            </div>
        </a>
    }
</div>
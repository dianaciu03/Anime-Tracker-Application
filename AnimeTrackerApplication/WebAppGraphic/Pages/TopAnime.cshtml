@page
@using Logic.Animes
@model WebAppGraphic.Pages.TopAnimeModel
@{
    int position = 1;
}

<div class="background-img-anime">
</div>

<h1 class="second-title text-white">Top rated anime</h1>
<h4 class="second-subtitle text-white">Here you can find the best rated anime available.</h4>
<div class="container-fluid container-display bg-dark">
    
    @foreach (Anime anime in Model.TopRatedAnime)
    {
        <a asp-page="ContentDetails" asp-route-id="@anime.Id">
            <div class="d-flex flex-column align-items-center">
                <img src="@anime.ImageURL" style="width: 190px; height: 260px;" />
                <p style=" padding-top: 8px">@position. @anime.Name</p>
                <p>@anime.Rating / 5 ⭐</p>
            </div>
        </a>
        position++;
    }
</div>
@page
@model WebApplicationGraphicLayer.Pages.ContactLoginModel
@{
}
<div >
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card p-4 rounded">
                    <h2 class="text-center mb-4">Login</h2>
                    <form method="post">
                        <div class="form-group">
                            <label style="color: white" for="inputEmail">Email</label>
                            <input type="email" class="form-control rounded-pill" id="inputEmail" name="inputEmail" required />
                        </div>
                        <div class="form-group">
                            <label style="color: white" for="inputPassword">Password</label>
                            <input type="password" class="form-control rounded-pill" id="inputPassword" name="inputPassword" required />
                        </div>
                        <button type="submit" style="padding: 2px 20px 3px 20px; font-size: 20px" class="btn btn-primary rounded-pill mt-4 d-flex mx-auto">Login</button>
                    </form>
                    <div style="color: white" class="text-center mt-3">
                        Don't have an account? Register <a asp-page="./ContactRegister">here.</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>